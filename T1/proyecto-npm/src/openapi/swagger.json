{
    "openapi": "3.0.3",
    "info": {
        "version": "0.0.1",
        "title": "Mi editor API",
        "description": "RESTFull API for editor notes",
        "termsOfService": "http://swagger.io/terms/"
    },
    "servers": [
        {
            "url": "http://localhost:3000/"
        }
    ],
    "paths": {
        "/notas": {
            "get": {
                "tags": [
                    "Notas"
                ],
                "summary": "Recoger todas las notas",
                "description": "Recoger las notas que están almacenadas",
                "responses": {
                    "200": {
                        "description": "Lista de notas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Notes"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Notas"
                ],
                "summary": "Crear nota ",
                "description": "Enviar los datos para crear una nota que sera almacenada",
                "requestBody": {
                    "description": "Crear nota",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostNotes"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Nota creada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Notes"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/notas/{name}": {
            "put": {
                "tags": [
                    "Notas"
                ],
                "summary": "Editar nota específica",
                "description": "Enviar los datos para editar una nota ya creada ",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Pon el nombre de la nota",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Body to edit a note",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PutNote"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Nota editada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Notes"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "Notas"
                ],
                "summary": "Eliminar nota específica",
                "description": "Eliminar las notas",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Pon el nombre de la nota",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Nota Eliminada",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DeleteNote"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Notes": {
                "type": "object",
                "properties": {
                    "results": {
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "content": {
                                    "type": "string",
                                    "format": "int64"
                                }
                            }
                        }
                    }
                }
            },
            "PostNotes": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string",
                        "format": "int64"
                    }
                }
            },
            "PutNote": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string",
                        "format": "int64"
                    }
                }
            },
            "DeleteNote": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "examples": {
                "Nota": {
                    "name": "notita",
                    "content": "Esta es nuestra notita"
                }
            }
        }
    }
}